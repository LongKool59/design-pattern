@model WebApplication1.Models.ViewModel.DonNghiPhepViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}
<style>
    textarea {
        width: 100%;
        height: 100px;
    }
</style>
<h1 class="function-page-title">TẠO ĐƠN NGHỈ PHÉP</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NgayNghi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.NgayNghi, new { htmlAttributes = new { @class = "form-control" } })*@

                @Html.TextBox("NgayNghi", null, new { placeholder = "MM/dd/YYYY", type = "date" })
                @Html.ValidationMessageFor(model => model.NgayNghi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CaNghi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CaNghi", new List<SelectListItem> {
                    new SelectListItem { Text = "Cả ngày", Value ="Cả ngày",Selected = true},
                    new SelectListItem { Text = "Ca sáng", Value ="Ca sáng"},
                    new SelectListItem { Text = "Ca chiều", Value ="Ca chiều"}
                })
                @Html.ValidationMessageFor(model => model.CaNghi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LyDo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.LyDo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LyDo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}

@Html.Partial("_Notifications")

<div class="footer-function">
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
